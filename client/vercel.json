{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}